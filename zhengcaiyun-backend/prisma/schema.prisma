generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id          String    @id @default(cuid())
  email       String    @unique
  password    String
  name        String?
  phone       String?
  isBanned    Boolean   @default(false)
  companyName String?
  creditCode  String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  licenses    License[]
  orders      Order[]

  @@index([email])
}

model Order {
  id            String   @id @default(cuid())
  userId        String
  plan          String
  amount        Int
  status        String   @default("pending")
  paymentMethod String   @default("wechat")
  transactionId String?  @unique
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  license       License?
  user          User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([status])
}

model License {
  id            String        @id @default(cuid())
  key           String        @unique
  userId        String?
  orderId       String?       @unique
  companyName   String
  companyDomain String?
  plan          String
  maxDevices    Int           @default(1)
  maxUsers      Int           @default(1)
  monthlyQuota  Int           @default(100)
  createdAt     DateTime      @default(now())
  expiresAt     DateTime
  status        String        @default("active")
  suspendReason String?
  devices       Device[]
  order         Order?        @relation(fields: [orderId], references: [id])
  user          User?         @relation(fields: [userId], references: [id])
  usageRecords  UsageRecord[]

  @@index([key])
  @@index([userId])
  @@index([companyName])
}

model Device {
  id          String   @id @default(cuid())
  licenseId   String
  fingerprint String
  lastSeen    DateTime @default(now())
  createdAt   DateTime @default(now())
  license     License  @relation(fields: [licenseId], references: [id])

  @@unique([licenseId, fingerprint])
  @@index([licenseId])
}

model UsageRecord {
  id          String   @id @default(cuid())
  licenseId   String
  productName String
  status      String
  createdAt   DateTime @default(now())
  license     License  @relation(fields: [licenseId], references: [id])

  @@index([licenseId])
  @@index([createdAt])
}

model Product {
  id           String          @id @default(cuid())
  zcyProductId String?         @unique
  name         String
  originalName String?
  category     String?
  status       String
  isTrojan     Boolean         @default(false)
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
  riskLevel    String?
  trojanStatus String?
  images       ImageResource[]

  @@index([status])
  @@index([zcyProductId])
}

model ImageResource {
  id          String   @id @default(cuid())
  url         String
  source      String
  originalUrl String?
  width       Int?
  height      Int?
  size        Int?
  productId   String?
  createdAt   DateTime @default(now())
  product     Product? @relation(fields: [productId], references: [id])

  @@index([url])
}

model CrawlerLog {
  id           String   @id @default(cuid())
  target       String
  status       String
  duration     Int
  itemsFound   Int
  errorMessage String?
  createdAt    DateTime @default(now())
}

model ProductDraft {
  id           String    @id @default(cuid())
  userId       String
  originalUrl  String
  originalId   String?
  shopName     String?
  title        String
  categoryPath String?
  categoryId   String?
  brand        String?
  model        String?
  images       String
  attributes   String
  skuData      String
  detailHtml   String
  status       String    @default("pending")
  publishUrl   String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  copyTaskId   String?
  detailImages String?
  errorMessage String?
  price        Float?
  publishedAt  DateTime?
  stock        Int?      @default(99)
  copyTask     CopyTask? @relation(fields: [copyTaskId], references: [id])

  @@index([userId])
  @@index([status])
  @@index([originalUrl])
}

model CopyTask {
  id           String         @id @default(cuid())
  userId       String
  shopUrl      String
  shopName     String?
  totalCount   Int            @default(0)
  successCount Int            @default(0)
  failedCount  Int            @default(0)
  status       String         @default("running")
  errorMessage String?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  drafts       ProductDraft[]

  @@index([userId])
  @@index([status])
}

model ComplianceRule {
  id        String   @id @default(cuid())
  content   String
  region    String   @default("Global")
  isEnabled Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([region])
}

model SystemLog {
  id        String   @id @default(cuid())
  level     String
  module    String
  message   String
  meta      String?
  createdAt DateTime @default(now())

  @@index([createdAt])
  @@index([level])
}
